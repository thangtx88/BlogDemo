<% provide(:title, @entry.user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @entry.user %>
        <%= yield :title %>
      </h1>
    </section>

  </aside>
  <div class="col-md-8">
    <% if !@user.nil? %>
      <%= render 'shared/comment_form' %>
    <% end %>
    <h2>List Comment</h2>
    <ol class="entries">
       <%= render @comments %>
    </ol>
    <%= will_paginate @comments %>
  </div>
</div>